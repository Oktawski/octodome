{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to API Service (Docker)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app/api",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}/api",
                    "to": "/app/api"
                }
            ]
        },
        {
            "name": "Attach to Event Broker (Docker)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app/event_broker",
            "port": 2346,
            "host": "127.0.0.1",
            "showLog": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}/event_broker",
                    "to": "/app/event_broker"
                }
            ]
        },
        {
            "name": "Attach to Registration Service (Docker)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app/registration_service",
            "port": 2347,
            "host": "127.0.0.1",
            "showLog": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}/registration_service",
                    "to": "/app/registration_service"
                }
            ]
        }
    ]
}